<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gif"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_voice_ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="voice ball"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_gif" />

        <Button
            android:id="@+id/bt_scroller_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scroller view"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_voice_ball" />

        <Button
            android:id="@+id/btn_rajawali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click Rajawali"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">


        <Button
            android:id="@+id/btn_drawerlayout_base_usage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:background="@color/text_color_dark"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Drawerlayout基础用法"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_drawerlayout_and_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@color/text_color_dark"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Drawerlayout+ToolBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_drawerlayout_base_usage" />

        <Button
            android:id="@+id/btn_drawerlayout_toolbar_navigationview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@color/text_color_dark"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Drawerlayout+ToolBar_NavigationView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_drawerlayout_and_toolbar" />

        <Button
            android:id="@+id/btn_drawerlayout_toolbar_navigationview_immerse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@color/text_color_dark"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Drawerlayout+ToolBar_NavigationView沉浸式"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_drawerlayout_toolbar_navigationview" />

        <Button
            android:id="@+id/btn_drawerlayout_navigationview_copyqq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@color/text_color_dark"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Drawerlayout+NavigationView 仿QQ侧滑"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_drawerlayout_toolbar_navigationview_immerse" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>